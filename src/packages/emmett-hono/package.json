{
  "name": "@event-driven-io/emmett-hono",
  "version": "0.38.0-next.0",
  "description": "Event-sourced HTTP helpers for Hono on Cloudflare Workers",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "build:types": "tsc -p tsconfig.build.json",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest --dir tests/e2e",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "@event-driven-io/emmett": "^0.37.0",
    "@hono/zod-openapi": "^0.9.2",
    "@types/pg": "^8.11.14",
    "hono": "^4.4.0",
    "http-problem-details": "^0.1.5",
    "pg": "^8.15.6",
    "zod": "^4.0.0-beta.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@hono/zod-validator": "^0.5.0",
    "@types/node": "^20.17.32",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.0.0",
    "commander": "^12.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^3.0.0",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^3.9.0"
  },
  "peerDependencies": {
    "@event-driven-io/emmett": ">=0.37.0",
    "@neondatabase/serverless": ">=1",
    "hono": ">=4",
    "zod": ">=4.0.0-beta.1"
  },
  "peerDependenciesMeta": {
    "@neondatabase/serverless": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.14.2"
}
